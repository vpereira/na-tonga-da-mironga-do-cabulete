<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @package.name %>
</p>

<p>
  <strong>Codestream:</strong>
  <%= @package.codestream.name %>
</p>

<p>
  <strong>Files:</strong>
  <ul>
  <% @package.package_files.each do |f| %>
    <li>
      <%= link_to f.path, codestream_package_package_file_path(@package.codestream.name,
                                                            @package.name,f.path) %>
    </li>
  <% end %>
  </ul>
</p>
